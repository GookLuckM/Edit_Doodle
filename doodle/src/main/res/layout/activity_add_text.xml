<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8c000000"
    >

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="18dp"
        android:text="取消"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="13dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:layout_below="@+id/tv_cancel"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="83dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="83dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:inputType="textMultiLine"
        android:text=" "
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_alignment"
            android:layout_width="19dp"
            android:layout_height="12dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/icon_alignment_left"/>

        <ImageButton
            android:id="@+id/cb_background"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/icon_text_selector"
            android:button="@null"

            />

        <RadioGroup
            android:id="@+id/rg_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="33dp"
            android:layout_toRightOf="@+id/cb_background"
            android:checkedButton="@+id/rb_scrawl_grey"
            android:orientation="horizontal">

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_grey" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_black" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_red" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_yellow" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_green" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_blue" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_purple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_purple" />

            <!-- <RadioButton
                 android:id="@+id/rb_scrawl_grey"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_grey_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_black"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_black_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_red"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_red_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_yellow"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_yellow_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_green"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_green_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_blue"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_blue_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_purple"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_purple_selector" />-->
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>