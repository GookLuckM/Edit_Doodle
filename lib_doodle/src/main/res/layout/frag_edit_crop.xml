<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="@color/white">


    <ImageButton
        android:id="@+id/iv_rotate"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:src="@drawable/icon_rotate"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_line"
        android:scaleType="fitCenter"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_rotate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rotate"
        app:layout_constraintRight_toRightOf="@+id/iv_rotate"
        android:textColor="#666666"
        android:textSize="9sp"
        android:text="旋转"
        app:layout_constraintTop_toBottomOf="@+id/iv_rotate"/>


    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="0dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@id/iv_rotate"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rotate"
        app:layout_constraintLeft_toRightOf="@+id/iv_rotate"
        android:src="@drawable/divide_line"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ratios"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_line"
        app:layout_constraintTop_toTopOf="@+id/iv_rotate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rotate"
        android:paddingLeft="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>