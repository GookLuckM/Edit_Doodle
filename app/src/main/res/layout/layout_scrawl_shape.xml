<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_125"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btn_shape_scrawl"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_shape_circle"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_shape_normal_selector"/>

    <TextView
        android:id="@+id/tv_shape_scrawl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_9"
        app:layout_constraintTop_toBottomOf="@+id/btn_shape_scrawl"
        app:layout_constraintLeft_toLeftOf="@+id/btn_shape_scrawl"
        app:layout_constraintRight_toRightOf="@id/btn_shape_scrawl"
        android:text="涂鸦"
        android:textColor="#666666"
        />

    <ImageButton
        android:id="@+id/btn_shape_circle"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/btn_shape_scrawl"
        app:layout_constraintRight_toLeftOf="@+id/btn_shape_rectangle"
        android:src="@drawable/icon_shape_circle_selector"/>

    <TextView
        android:id="@+id/tv_shape_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_shape_circle"
        app:layout_constraintLeft_toLeftOf="@+id/btn_shape_circle"
        app:layout_constraintRight_toRightOf="@id/btn_shape_circle"
        android:text="涂鸦"
        android:textColor="#666666"
        android:textSize="@dimen/sp_9"/>

    <ImageButton
        android:id="@+id/btn_shape_rectangle"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/btn_shape_circle"
        app:layout_constraintRight_toLeftOf="@+id/btn_shape_arrow"
        android:src="@drawable/icon_shape_rectangle_selector"/>

    <TextView
        android:id="@+id/tv_shape_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_shape_rectangle"
        app:layout_constraintLeft_toLeftOf="@+id/btn_shape_rectangle"
        app:layout_constraintRight_toRightOf="@id/btn_shape_rectangle"
        android:text="涂鸦"
        android:textColor="#666666"
        android:textSize="@dimen/sp_9"/>

    <ImageButton
        android:id="@+id/btn_shape_arrow"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/dp_10"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/btn_shape_rectangle"
        android:src="@drawable/icon_shape_arrow_selector"/>

    <TextView
        android:id="@+id/tv_shape_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_shape_arrow"
        app:layout_constraintLeft_toLeftOf="@+id/btn_shape_arrow"
        app:layout_constraintRight_toRightOf="@id/btn_shape_arrow"
        android:text="涂鸦"
        android:textColor="#666666"
        android:textSize="@dimen/sp_9"/>

    <ImageView
        android:id="@+id/iv_shape_arrow_down"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/icon_arrow_down"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shape_circle"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_7"
        android:padding="@dimen/dp_10"/>

</android.support.constraint.ConstraintLayout>