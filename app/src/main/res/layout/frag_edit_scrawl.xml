<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_125"
    android:background="@android:color/white">


    <ImageButton
        android:id="@+id/btn_wipe"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/dp_13"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_8"
        android:scaleType="fitXY"
        android:src="@drawable/icon_wipe_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_shape"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_wipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="擦除"
        android:textColor="#666666"
        android:textSize="@dimen/sp_9"
        app:layout_constraintLeft_toLeftOf="@id/btn_wipe"
        app:layout_constraintRight_toRightOf="@id/btn_wipe"
        app:layout_constraintTop_toBottomOf="@id/btn_wipe" />

    <ImageButton
        android:id="@+id/btn_shape"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/dp_9"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_8"
        android:scaleType="fitXY"
        android:src="@drawable/icon_shape_normal_unselect"
        app:layout_constraintLeft_toRightOf="@+id/btn_wipe"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="形状"
        android:textColor="#666666"
        android:textSize="@dimen/sp_9"
        app:layout_constraintLeft_toLeftOf="@id/btn_shape"
        app:layout_constraintRight_toRightOf="@id/btn_shape"
        app:layout_constraintTop_toBottomOf="@id/btn_shape" />

    <ImageButton
        android:id="@+id/btn_paint_size"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/dp_9"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_8"
        android:scaleType="fitXY"
        android:src="@drawable/icon_stroke_small_unselected"
        app:layout_constraintLeft_toRightOf="@+id/btn_shape"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_paint_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大小"
        android:textColor="#666666"
        android:textSize="@dimen/sp_9"
        app:layout_constraintLeft_toLeftOf="@id/btn_paint_size"
        app:layout_constraintRight_toRightOf="@id/btn_paint_size"
        app:layout_constraintTop_toBottomOf="@id/btn_paint_size" />

    <ImageView
        android:id="@+id/iv_divide_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_9"
        android:src="@drawable/divide_line"
        app:layout_constraintBottom_toBottomOf="@id/btn_paint_size"
        app:layout_constraintLeft_toRightOf="@+id/btn_paint_size"
        app:layout_constraintTop_toTopOf="@+id/btn_paint_size" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_colors"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_17"
        app:layout_constraintBottom_toBottomOf="@+id/tv_paint_size"
        app:layout_constraintLeft_toRightOf="@+id/iv_divide_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_paint_size" />


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_7"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/icon_bottom_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_colors" />


    <TextView
        android:id="@+id/iv_current_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="涂鸦"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/iv_close"
        app:layout_constraintLeft_toRightOf="@+id/iv_close"
        app:layout_constraintRight_toLeftOf="@+id/iv_done"
        app:layout_constraintTop_toTopOf="@+id/iv_close" />


    <LinearLayout
        android:id="@+id/ll_bottom_pre_or_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_close"
        app:layout_constraintLeft_toRightOf="@+id/iv_close"
        app:layout_constraintRight_toLeftOf="@+id/iv_done"
        app:layout_constraintTop_toTopOf="@+id/iv_close">

        <ImageView
            android:id="@+id/iv_pre"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_32"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:src="@drawable/icon_pre_black" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_32"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_35"
            android:src="@drawable/icon_next_black" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_done"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_7"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/icon_bottom_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_colors" />

</android.support.constraint.ConstraintLayout>