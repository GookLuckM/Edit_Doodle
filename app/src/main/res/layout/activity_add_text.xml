<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8c000000"
    tools:context=".AddTextActivity">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_13"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14"
        android:text="取消"/>

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_26"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:text="完成"
       />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_83"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_83"
        android:background="@android:color/holo_red_light"
        android:inputType="textMultiLine"
        android:textSize="@dimen/sp_28"
        android:text=" 123123213213123123123123123123123123123123"
        android:cursorVisible="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rg_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_cancel"
        />

    <CheckBox
        android:id="@+id/cb_background"
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        android:background="@drawable/icon_text_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/rg_color"
        app:layout_constraintTop_toTopOf="@+id/rg_color"
        android:layout_marginLeft="@dimen/dp_17"
        android:button="@null"

        />

    <RadioGroup
        android:id="@+id/rg_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_23"
        app:layout_constraintLeft_toRightOf="@+id/cb_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:checkedButton="@+id/rb_scrawl_grey"
        android:orientation="horizontal">

        <cn.hzw.doodledemo.IMGColorRadio
            android:id="@+id/rb_scrawl_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_color="@color/image_color_grey" />

        <cn.hzw.doodledemo.IMGColorRadio
            android:id="@+id/rb_scrawl_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_color="@color/image_color_black" />

        <cn.hzw.doodledemo.IMGColorRadio
            android:id="@+id/rb_scrawl_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_color="@color/image_color_red" />

        <cn.hzw.doodledemo.IMGColorRadio
            android:id="@+id/rb_scrawl_yellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_color="@color/image_color_yellow" />

        <cn.hzw.doodledemo.IMGColorRadio
            android:id="@+id/rb_scrawl_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_color="@color/image_color_green" />

        <cn.hzw.doodledemo.IMGColorRadio
            android:id="@+id/rb_scrawl_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_color="@color/image_color_blue" />

        <cn.hzw.doodledemo.IMGColorRadio
            android:id="@+id/rb_scrawl_purple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_color="@color/image_color_purple" />

