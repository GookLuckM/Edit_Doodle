<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8c000000"
    tools:context=".AddTextActivity">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_18"
        android:text="取消"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:layout_below="@+id/tv_cancel"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_83"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_83"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:inputType="textMultiLine"
        android:text=" "
        android:textSize="@dimen/sp_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_23"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_background"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="@drawable/icon_text_selector"
            android:button="@null"

            />

        <RadioGroup
            android:id="@+id/rg_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_33"
            android:layout_toRightOf="@+id/cb_background"
            android:checkedButton="@+id/rb_scrawl_grey"
            android:orientation="horizontal">

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_grey" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_black" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_red" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_yellow" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_green" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_blue" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_purple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_purple" />

            <!-- <RadioButton
                 android:id="@+id/rb_scrawl_grey"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_grey_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_black"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_black_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_red"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_red_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_yellow"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_yellow_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_green"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_green_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_blue"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_blue_selector" />

             <RadioButton
                 android:id="@+id/rb_scrawl_purple"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:button="@null"
                 android:drawableRight="@drawable/icon_scrawl_purple_selector" />-->
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>