<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPhotoActivity">

    <FrameLayout
        android:id="@+id/doodle_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_mosaic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tab_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioGroup
            android:id="@+id/rg_mosaic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/iv_mosaic_back"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_large_mosaic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="-20dp"
                android:drawableTop="@drawable/icon_mosaic_large_selector" />

            <RadioButton
                android:id="@+id/rb_small_mosaic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="-20dp"
                android:drawableTop="@drawable/icon_mosaic_small_selector" />
        </RadioGroup>

        <ImageView
            android:id="@+id/iv_mosaic_back"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:src="@drawable/edit_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_scrawl_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_35"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tab_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioGroup
            android:id="@+id/rg_scrawl_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_toLeftOf="@+id/iv_scrawl_back"
            android:orientation="horizontal">

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_grey" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_black" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_red" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_yellow" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_green" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_blue" />

            <cn.hzw.doodledemo.IMGColorRadio
                android:id="@+id/rb_scrawl_purple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:image_color="@color/image_color_purple" />

           <!-- <RadioButton
                android:id="@+id/rb_scrawl_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/icon_scrawl_grey_selector" />

            <RadioButton
                android:id="@+id/rb_scrawl_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/icon_scrawl_black_selector" />

            <RadioButton
                android:id="@+id/rb_scrawl_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/icon_scrawl_red_selector" />

            <RadioButton
                android:id="@+id/rb_scrawl_yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/icon_scrawl_yellow_selector" />

            <RadioButton
                android:id="@+id/rb_scrawl_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/icon_scrawl_green_selector" />

            <RadioButton
                android:id="@+id/rb_scrawl_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/icon_scrawl_blue_selector" />

            <RadioButton
                android:id="@+id/rb_scrawl_purple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/icon_scrawl_purple_selector" />-->
        </RadioGroup>

        <ImageView
            android:id="@+id/iv_scrawl_back"
            android:layout_width="23dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/edit_back" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/tab_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_done"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_done"
        app:layout_constraintTop_toTopOf="@+id/tv_done">

        <RadioButton
            android:id="@+id/rb_scrawl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/icon_scrawl_selector" />

        <RadioButton
            android:id="@+id/rb_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/icon_text_selector" />

        <RadioButton
            android:id="@+id/rb_crop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/crop_unselected" />

        <RadioButton
            android:id="@+id/rb_mosaic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/icon_mosaic_selector" />

    </RadioGroup>


    <TextView
        android:id="@+id/tv_done"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="31dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>