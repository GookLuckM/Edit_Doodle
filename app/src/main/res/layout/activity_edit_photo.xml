<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPhotoActivity">

    <FrameLayout
        android:id="@+id/doodle_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_frag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_27"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_scrawl"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_21"
            android:layout_weight="1"
            android:src="@drawable/scrawl_unselected"
            />

        <ImageView
            android:id="@+id/iv_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_21"
            android:layout_weight="1"
            android:src="@drawable/text_unselected"
            />

        <ImageView
            android:id="@+id/iv_mosaic"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_21"
            android:layout_weight="1"
            android:src="@drawable/mosaic_unselected"
             />

        <ImageView
            android:id="@+id/iv_crop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_21"
            android:src="@drawable/crop_unselected"
            />


        <TextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_13"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_4"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/edit_frag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doodle_container" />


</android.support.constraint.ConstraintLayout>